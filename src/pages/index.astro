<style>

	.bgc{
		background-image: url("/public/img/index-image/main-fondo.jpg");
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		height: 100%;
		opacity: .8;
	}
	
	.main-page{
		padding: 95px 0;
		display: flex;
		justify-content:  center;
		align-items: center;
	}

	.presentation img{
		width: 300px;
	}

	.title{
		margin-right: 35px;
	}

	#title{
		font-size: 85px;
		color: rgb(255, 255, 255);
	}

	#lema{
		font-size: 68px; 
		color: white;
	}


	.relleno{
		padding: 25px;
		background: rgb(238,60,59);
		background: linear-gradient(180deg, rgba(233,60,61,1) 70%, rgba(59,67,123,1) 100%);
		box-shadow: inset 0px 7px 48px -21px rgba(59,66,123,1);

	}

	.back{
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.relleno-text{
		background-color: rgb(229, 232, 232);
		color: rgb(51, 51, 51);
		width: 70rem;
		padding: 55px;
		border-radius: 5px;
		max-width: 995px;
	
	}
	.relleno-text h1{
		font-size: 45px;
		font-style: italic;
	}

	.relleno-text p{
		font-size: 22px;
	}

	.img-relleno img{
		width: 390px;
		margin-left: 50px;
	}

	.relleno2{
		background: rgba(59,67,123,1);
		background: linear-gradient(180deg, rgba(59,67,123,1) 20%, rgba(233,60,61,1) 60%);
		box-shadow: inset 0px 7px 0px -21px rgba(233,60,61,1);
		display: flex;
	}

	.ubicacion{
		margin: 105px 0;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.direccion{
		width: 500px;
		margin-right: 110px;
	}

	.map img{
		border-radius: 45px;
	}

	.direccion h1{
		font-size: 40px;
	}

	.direccion p{
		font-size: 20px;
	}

	.direccion button{
		font-size: 20px;
		font-weight: bold;
		padding: 5px 25px;
		border-radius: 30px;
		border: 3px black solid;
		margin-top: 15px;
		background-color: white;
		cursor: pointer;
		transition: 0.3s;
	}

	.direccion button a{
		text-decoration: none;
		color: black;
	}

	.direccion button a:hover{
		color: white;
	}

	.direccion button:hover{
		border: rgb(185, 182, 182) solid;
		background-color: #3B437B;
	}

	.direccion button:active{
		color: rgb(174, 171, 171);
		background-color: #313765;
	}

	/* Responsive */

	@media(min-width: 1710px){

		.relleno{
			padding: 25px 55px;
			background: rgb(233,60,61);
			background: linear-gradient(180deg, rgba(233,60,61,1) 70%, rgba(59,67,123,1) 100%);
			box-shadow: inset 0px 7px 48px -21px rgba(59,66,123,1);

		}

		.back{
			display: flex;
			justify-content: space-between;
			align-items: center;
			border-radius: 15px;
			margin: 0px 120px;
		}

		.relleno-text{
			background-color: rgb(229, 232, 232);
			color: rgb(51, 51, 51);
			width: 70rem;
			padding: 55px;
			border-radius: 5px;
			max-width: 995px;
		
		}
		.relleno-text h1{
			font-size: 45px;
			font-style: italic;
		}

		.relleno-text p{
			font-size: 22px;
		}

		.img-relleno img{
			width: 390px;
		}


	}

	@media(max-width:1200px) {
		.direccion{
			width: 380px;
			margin-right: 90px;
		}

		.map img{
			width: 400px;
			border-radius: 45px;
		}
	}
	
	@media(max-width: 1080px){
		
		.presentation img{
			width: 200px;
		}

		#title{
			font-size: 65px;
		}

		#lema{
			font-size: 48px;
		}

		.direccion{
			width: 500px;
			margin-right: 70px;
		}

		.map img{
			width: 400px;
			border-radius: 45px;
		}

		.direccion h1{
			font-size: 35px;
		}

		.direccion p{
			margin-top: 10px;
			font-size: 20px;
		}

	}

